<idea-plugin>
  <id>com.duseev.intellij.preservelayout</id>
  <name>Preserve Layout Plugin</name>
  <version>1.0</version>
  <vendor email="vagiz@duseev.com" url="http://duseev.com">Duseev.com</vendor>

  <description><![CDATA[
      Export and import IDEA project layouts.
    ]]></description>

  <change-notes><![CDATA[
      Oct 9, 2017 - First version
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <group id="PreserveLayoutActionGroup" text="Import/Export Project Layout">
      <action id="ExportLayout" class="com.duseev.intellij.preservelayout.LayoutExporter" text="Export Layout..."
              description="Export current project layout">
      </action>
      <action id="LayoutImporter" class="com.duseev.intellij.preservelayout.LayoutImporter" text="Import Layout..."
              description="Import project layout">
      </action>
      <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="ExternalToolsGroup"/>
    </group>
  </actions>

</idea-plugin>