<idea-plugin>
  <id>com.duseev.intellij.preservelayout</id>
  <name>Preserve Layout Plugin</name>
  <version>1.0</version>
  <vendor email="vagiz@duseev.com" url="http://duseev.com">Duseev.com</vendor>

  <description><![CDATA[
    This plugin provides Export & Import functionality for IntelliJ window layout.
    Preserve your favorite layout across different projects.
    Plugin is accessible via View Menu:
    <ul>
        <li><b>Export project layout:</b> export current window layout to 'layout.xml'</li>
        <li><b>Import project layout:</b> import 'layout.xml' into current project</li>
    </ul>
    <br/>
    <b>NOTE (MacOS/Linux):</b> You have to reopen a project after layout import to apply changes.
    <b>NOTE (Windows):</b> You have to restart the IDE after layout import to apply changes.
    <br/>
    Feature improvements:
    <ul>
      <li>Get rid of need to restart IDE</li>
    </ul>
    ]]></description>

  <change-notes><![CDATA[
        <ul>
          <li>Oct 13, 2017 - Initial version</li>
        </ul>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <group id="PreserveLayoutActionGroup" text="Import Export Project Layout" description="Preserve Project Layout">
      <add-to-group group-id="ViewMenu"/>
      <separator />
      <action id="ExportLayout" class="com.duseev.intellij.preservelayout.ExportLayoutAction" text="Export Project Layout..."
              description="Export current project layout"/>
      <action id="LayoutImporter" class="com.duseev.intellij.preservelayout.ImportLayoutAction" text="Import Project Layout..."
              description="Import project layout"/>
    </group>
  </actions>

</idea-plugin>